<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="506dp">

        <ImageView
            android:id="@+id/RecipeImage"
            android:layout_width="185dp"
            android:layout_height="166dp"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toTopOf="@+id/IngredientsTVcard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/RecipeNameTVcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="49dp"
            android:text="name"
            app:layout_constraintBottom_toTopOf="@+id/CaloriesTVcard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecipeImage" />

        <TextView
            android:id="@+id/IngredientsTVcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="61dp"
            android:text="ingredients"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/CaloriesTVcard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecipeImage" />

        <TextView
            android:id="@+id/CaloriesTVcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="42dp"
            android:text="calories"
            app:layout_constraintBottom_toTopOf="@+id/InstructionsTVcard"
            app:layout_constraintEnd_toStartOf="@+id/PTimeTVcard"
            app:layout_constraintStart_toEndOf="@+id/IngredientsTVcard"
            app:layout_constraintTop_toBottomOf="@+id/RecipeNameTVcard" />

        <TextView
            android:id="@+id/PTimeTVcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:text="prep time"
            app:layout_constraintBaseline_toBaselineOf="@+id/CaloriesTVcard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/CaloriesTVcard" />

        <TextView
            android:id="@+id/InstructionsTVcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CaloriesTVcard" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>